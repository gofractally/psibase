{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build UI",
      "type": "shell",
      "command": "cd ui && yarn && yarn build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "statusbar": {
          "label": "$(tools) Build UI"
        }
      }
    },
    {
      "label": "Build package",
      "type": "shell",
      "command": "cargo-psibase package",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "options": {
        "statusbar": {
          "label": "$(tools) Build package"
        }
      }
    }
  ]
}
