[book]
language = "en"
multilingual = false
src = "${CMAKE_CURRENT_SOURCE_DIR}/doc/psidk/src"
title = "psidk"

[preprocessor.gen-cpp-doc]
command = "/usr/bin/env WASI_SDK_PREFIX=${WASI_SDK_PREFIX} ${CMAKE_CURRENT_BINARY_DIR}/rust/release/gen-cpp-doc --srcdir '${CMAKE_CURRENT_SOURCE_DIR}' --builddir '${CMAKE_CURRENT_BINARY_DIR}'"
# command = "../../rust/target/debug/gen-cpp-doc"
after = ["links","index"]

[preprocessor.mermaid]
command = "mdbook-mermaid"

[output.html]
default-theme = "ayu"
preferred-dark-theme = "ayu"
git-repository-url = "https://github.com/gofractally/psibase"
additional-js = ["mermaid.min.js", "mermaid-init.js", "applet-init.js"]

[output.html.playground]
runnable = false

[output.html.fold]
enable = true

#[output.linkcheck]
