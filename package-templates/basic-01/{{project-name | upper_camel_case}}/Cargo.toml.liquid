[workspace]
resolver = "2"
members = ["service", "plugin"]

[workspace.package]
version = "{{version}}"
rust-version = "1.64"
edition = "2021"
publish = false

[workspace.dependencies]
# Pin cxx-build to avoid 1.0.187 which requires Rust 1.87
cxx-build = ">=1, <1.0.187"
# Standard dependencies used across services
psibase = { path = "../../../rust/psibase/", version = "{{version}}" }
psibase_macros = { path = "../../../rust/psibase_macros/", version = "{{version}}" }
async-graphql = "=7.0.17"
serde = { version = "1.0.208", features = ["derive"] }
serde_json = "1.0.125"
wit-bindgen-rt = { version = "0.30.0", features = ["bitflags"] }

[package]
name = "{{project-name}}-pkg"                      # Crate name
description = "{{description}}"
version.workspace = true
rust-version.workspace = true
edition.workspace = true
publish.workspace = true

[profile.release]
codegen-units = 1
opt-level = "s"
debug = false
strip = true
lto = true

[package.metadata.psibase]
package-name = "{{project-name | upper_camel_case}}"
services = ["{{project-name}}"]

[package.metadata.psibase.dependencies]
HttpServer = "{{version}}"
Sites = "{{version}}"
Permissions = "{{version}}"

[lib]
crate-type = ["rlib"]

[dependencies]
{{project-name}} = { path = "service", version = "{{version}}" }
r-{{project-name}} = { path = "query-service", version = "{{version}}" }
{{project-name}}-plugin = { path = "plugin", version = "{{version}}" }
