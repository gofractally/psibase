[package]
name = "{{project-name}}"
version.workspace = true
rust-version.workspace = true
edition.workspace = true
publish.workspace = true

[package.metadata.psibase]
server = "r-{{project-name}}"
plugin = "{{project-name}}-plugin"
data = [{ src = "../ui/dist", dst = "/" }]
postinstall = [
    { sender = "{{project-name}}", service = "{{project-name}}", method = "init", data = {} },
]

[dependencies]
psibase.workspace = true
psibase_macros.workspace = true
async-graphql.workspace = true
serde.workspace = true
serde_json.workspace = true
user-workspace-hack = { version = "0.1", path = "../../user-workspace-hack" }

[dev-dependencies]
{{project-name}}-pkg = { path = "..", version = "{{version}}" }
