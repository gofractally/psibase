{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "baseUrl": "src",
        // TODO: add types in new meet code and remove following 2 exceptions
        "noImplicitAny": false,
        "paths": {
            // path needed here to map the import statement's path/module name to a local path
            "@toolbox/components/*": ["../../../packages/components/src/*"],
            "@toolbox/psi-rpc": ["../../../packages/rpc/src"]
        },
        "useDefineForClassFields": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
