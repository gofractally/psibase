{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,
        "jsx": "react-jsx",
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "baseUrl": "./",
        "paths": {
            "@psibase/common-lib": [
                "../../CommonApi/common/packages/common-lib/src"
            ],
            "@psibase/common-lib/*": [
                "../../CommonApi/common/packages/common-lib/src/*"
            ],
            "@components": ["src/components"],
            "@components/*": ["src/components/*"],
            "@shadcn": ["src/shad/components/ui"],
            "@shadcn/*": ["src/shad/components/ui/*"],
            "@lib": ["src/lib"],
            "@lib/*": ["src/lib/*"],
            "@hooks": ["src/hooks"],
            "@hooks/*": ["src/hooks/*"],
            "@/*": ["./src/*"]
        },
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src"]
}
